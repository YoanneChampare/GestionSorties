{% extends 'base.html.twig' %}
{% block body %}

    {% if error %}
        <div class="text-danger">{{ error.messageKey }}</div>
    {% endif %}
    <div class="mx-auto" style="width: 200px;margin-top: 100px">
<form method="post">
            <div> <label>Identifiant :</label><input type="email" name="_username" style="width:300px " placeholder="exemple@domaine"></div>
            <div class="group-form"><label>Mot de passe :</label><input type="password" name="_password" style="width:300px"></div>

            <div class="group-form"><input type="checkbox" id="remember_me" name="_remember_me" />
                <label for="remember_me">Se souvenir de moi</label></div><br>


<div>  <button type="submit" class="btn btn-primary">Connexion</button></div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
</form>

    <a href="{{path("reset_password") }}" onclick="help()">Mot de passe oubli√©</a>

</form>
    </div>

{% endblock %}


{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(".help").hide();
        function help(){
            $(".help").show();
        }
    </script>
{% endblock %}