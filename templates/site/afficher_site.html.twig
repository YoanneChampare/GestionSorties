<div class="searchSortie">

    <div class="text-right" style="margin-right: 20px">Date du jour: {{ "now"|date("d/m/Y") }}</div>
    <div class="text-right" style="margin-right: 20px">Participant(e): {{ user.prenom }} {{ user.nom }}</div>
    <div class="search-title">
        {% include 'lieu/filtre_lieu.html.twig' %}

    </div>

    <div style="margin-bottom: 20%">
        <table class="table">
            <tr>

                <th>Nom du site</th>
                <th>Actions</th>


            </tr>

            {% for key,s in sites %}

                <tr>
                    <td>{{ s.nom }}</td>

                <td>
                    <a href="{{ path('modifier',{'id':s.id}) }}">Modifier</a>

                    <a href="{{ path("supprimer",{'id':s.id}) }}">Supprimer</a>

                </td>
            </tr>
               {% endif %}
            {% endfor %}
        </table>
    </div>
</div>