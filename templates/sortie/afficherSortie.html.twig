    </div>

    <form method="post" action="{{ path("afficherSortie",{"id":1}) }}">
        {% if( etat ==2)%}
        <div>  <button type="submit" class="btn btn-primary">S'inscrire</button></div>
        {% elseif(etat==0 ) %}
        <div>  <button type="submit" class="btn btn-danger">Désister</button></div>
        {% else %}
            <div>  <button type="submit" disabled="disabled" class="btn btn-primary">S'inscrire</button></div>
        {% endif %}
    </form>


    {% for participant in p_sortie %}
        {{ participant.nom }}
    {% endfor %}


    
