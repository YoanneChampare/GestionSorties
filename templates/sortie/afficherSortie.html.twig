{% extends 'base.html.twig' %}
{% block body %}

    <div>

        <div><label>Nom de la sortie: </label>{{ sortie.nom }}</div>
        <div> <label>Date et heure de la sortie: </label>{{ sortie.dateHeureDebut | date("d/m/Y")}}</div>
        <div><label>Date limite d'inscription: </label>{{ sortie.dateLimiteInscription | date("d/m/Y")}}</div>
        <div><label>Nombre de places: </label>{{ sortie.nbInscriptionsMax }}</div>
        <div><label>Durée: </label>{{ sortie.duree |date("h:m:s")}}</div>
        <div><label>Description et infos: </label>{{ sortie.infosSortie }}</div>
