{% extends 'base.html.twig' %}
{% block body %}

    <div class="text-right" style="margin-right: 20px">Date du jour: {{ "now"|date("d/m/Y") }}</div>

    <div class="search-title">
        {% include 'ville/filtre_ville.html.twig' %}

    </div>


    <div class="mx-auto group-form" style="width: 400px">


    <div style="margin-bottom: 20%">
        <table class="table">
            <tr>

                <th>Nom de la Ville</th>
                <th>Code Postal </th>
                <th>Actions</th>
            </tr>

            {% for v in villes %}

            <tr>
                <td>{{ v.nom }}</td>
                <td>{{ v.codePostal }}</td>

                <td>
                    <a href="{{ path("modifier_ville",{'id':v.id}) }}">Modifier</a>

                    <a href="{{ path("delete_ville",{'id':v.id}) }}">Supprimer</a>

                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
        <a href="{{ path("add_ville") }}"><button type="submit" class="btn btn-primary">Ajouter</button></a>
</div>

{%  endblock %}